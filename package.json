{
  "name": "iphone-to-pixel",
  "version": "0.0.0",
  "description": "Convert iOS media files for Pixel compatibility",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ios",
    "pixel",
    "heic",
    "hevc",
    "media",
    "converter"
  ],
  "author": "dna",
  "license": "MIT",
  "bin": {
    "iphone-to-pixel": "./dist/index.js",
    "itp": "./dist/index.js"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "execa": "^9.6.1",
    "kleur": "^4.1.5",
    "ora": "^9.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
