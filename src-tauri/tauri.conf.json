{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "iPhone to Pixel",
  "version": "0.0.3",
  "identifier": "me.nkdr.iphone-to-pixel",
  "build": {
    "frontendDist": "../src-ui/.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run build:sidecar && cd src-ui && bun run dev",
    "beforeBuildCommand": "bun run build:sidecar && cd src-ui && bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "iPhone to Pixel",
        "width": 800,
        "height": 600,
        "minWidth": 420,
        "minHeight": 360,
        "titleBarStyle": "Transparent",
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/itp"
    ]
  }
}
